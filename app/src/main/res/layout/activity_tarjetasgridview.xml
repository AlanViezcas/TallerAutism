<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lany.tallerautism.TarjetasGridView">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:elevation="5dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgScreen1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgScreen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgScreen3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgScreen4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <![CDATA[



    >



    ]]>

    <LinearLayout
        android:id="@+id/lotBorrar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ViewStub
                    android:id="@+id/stub_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:inflatedId="@+id/showlayout"
                    android:layout="@layout/my_gridview"
                    android:padding="5dp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/creadas" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Creadas"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/deseos" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Deseos"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lugares" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Lugares"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/acciones" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Acciones"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/img5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emociones" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Emociones"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/img6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/comida" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Comida"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ropa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ropa"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cuerpo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cuerpo"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7sp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/animales" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Animales"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
